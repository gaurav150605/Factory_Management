<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-plus-circle me-2"></i>Add Stock Item</h2>
    <a href="/stock" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Back to Stock
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Stock Item Information</h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/stock/add" class="needs-validation form-with-loading" novalidate>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="name" class="form-label">Item Name *</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                            <div class="invalid-feedback">
                                Please enter item name.
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="quantity" class="form-label">Quantity *</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" 
                                   step="0.1" min="0" required>
                            <div class="invalid-feedback">
                                Please enter a valid quantity.
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="unit" class="form-label">Unit *</label>
                            <select class="form-select" id="unit" name="unit" required>
                                <option value="">Select unit</option>
                                <option value="kg">Kilograms (kg)</option>
                                <option value="liters">Liters (L)</option>
                                <option value="pieces">Pieces</option>
                                <option value="boxes">Boxes</option>
                                <option value="bags">Bags</option>
                                <option value="grams">Grams (g)</option>
                            </select>
                            <div class="invalid-feedback">
                                Please select a unit.
                            </div>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="3" 
                                      placeholder="Optional description..."></textarea>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/stock" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Save Stock Item
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Stock Guidelines</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6><i class="fas fa-info-circle text-info me-2"></i>Stock Levels</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <span class="badge bg-danger me-2">Low</span>
                            Less than 10 units
                        </li>
                        <li class="mb-2">
                            <span class="badge bg-warning me-2">Medium</span>
                            10-50 units
                        </li>
                        <li class="mb-2">
                            <span class="badge bg-success me-2">Good</span>
                            More than 50 units
                        </li>
                    </ul>
                </div>
                
                <div class="mb-3">
                    <h6><i class="fas fa-lightbulb text-warning me-2"></i>Tips</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-1">• Update stock regularly</li>
                        <li class="mb-1">• Set minimum stock alerts</li>
                        <li class="mb-1">• Track expiration dates</li>
                        <li class="mb-1">• Monitor usage patterns</li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0">Common Raw Materials</h5>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <strong>Sugar</strong><br>
                    <small class="text-muted">Primary sweetener for pedha</small>
                </div>
                <div class="mb-2">
                    <strong>Milk</strong><br>
                    <small class="text-muted">Fresh milk for pedha base</small>
                </div>
                <div class="mb-2">
                    <strong>Ghee</strong><br>
                    <small class="text-muted">Clarified butter for flavor</small>
                </div>
                <div class="mb-2">
                    <strong>Cardamom</strong><br>
                    <small class="text-muted">Spice for aroma</small>
                </div>
                <div class="mb-2">
                    <strong>Saffron</strong><br>
                    <small class="text-muted">Premium flavoring agent</small>
                </div>
            </div>
        </div>
    </div>
</div>
